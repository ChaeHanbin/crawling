<div class="container" style = "margin-top:50px">
    <table>
        <thead>
          <tr>
              <th>번호</th>
              <th>제목</th>
              <th>부제목</th>
              <th>득표수</th>
              <th>제출자</th>
          </tr>
        </thead>

        <tbody>
            <% @idea.each do |i| %>
              <tr>
                <td><%= i.number %></td>
                <td><%= i.title %></td>
                <td><%= i.subtitle %></td>
                <td><%= i.vote %></td>
                <td><%= User.find_by_number(i.cap).name %></td> 
                <!--User의 number을 i.cap으로 찾는다, 그것의 이름을 보여주자-->
              </tr>
            <% end %>
        </tbody>
    </table>
</div>